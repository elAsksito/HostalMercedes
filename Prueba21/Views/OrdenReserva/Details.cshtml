@model Prueba21.Models.OrdenReserva

@{
    ViewData["Title"] = "Detalles de la Orden de Reserva";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-receipt"></i> Detalles de la Orden de Reserva</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID Reserva:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.OrdenReservaId)</dd>

                <dt class="col-sm-3">Fecha de Entrada:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaEntrada)</dd>

                <dt class="col-sm-3">Fecha de Salida:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaSalida)</dd>

                <dt class="col-sm-3">Nombre del Cliente:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Cliente.Nombre)</dd>

                <dt class="col-sm-3">Correo del Cliente:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Cliente.Email)</dd>

                <dt class="col-sm-3">Telefono del Cliente:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Cliente.Telefono)</dd>

                <dt class="col-sm-3">Número de Habitación:</dt>
                <dd class="col-sm-9">N°- @Html.DisplayFor(model => model.Habitacion.Numero)</dd>

                <dt class="col-sm-3">Tipo de Habitación:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Habitacion.Tipo)</dd>

                <dt class="col-sm-3">Forma de Pago:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FormaDePago.Nombre)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>

            @if (User.IsInRole("Administrador"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.OrdenReservaId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
            }
            
        </div>
    </div>
</div>
