@model Prueba21.Models.OrdenConserjeria

@{
    ViewData["Title"] = "Crear Orden de Conserjería";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-broom"></i> Crear Orden de Conserjería</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

                <div class="row">
                    <!-- Habitación -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="HabitacionId" class="form-label fw-bold"></label>
                        <select asp-for="HabitacionId" class="form-select" asp-items="ViewBag.HabitacionId">
                            <option value="">Seleccione una Habitación</option>
                        </select>
                    </div>

                    <!-- Personal -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="PersonalId" class="form-label fw-bold"></label>
                        <select asp-for="PersonalId" class="form-select" asp-items="ViewBag.PersonalId">
                            <option value="">Seleccione un Personal</option>
                        </select>
                    </div>

                    <!-- Fecha de Inicio -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaInicio" class="form-label fw-bold"></label>
                        <input asp-for="FechaInicio" type="datetime-local" class="form-control" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>

                    <!-- Fecha de Fin -->
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaFin" class="form-label fw-bold"></label>
                        <input asp-for="FechaFin" type="datetime-local" class="form-control" />
                        <span asp-validation-for="FechaFin" class="text-danger"></span>
                    </div>

                    <!-- Descripción -->
                    <div class="col-12 mb-3">
                        <label asp-for="Descripcion" class="form-label fw-bold"></label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Detalles sobre la orden de conserjería..."></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save"></i> Guardar Orden
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
