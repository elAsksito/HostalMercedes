@model Prueba21.Models.OrdenConserjeria

@{
    ViewData["Title"] = "Detalles de la Orden de Conserjería";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-concierge-bell"></i> Detalles de la Orden de Conserjería</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID Conserjería:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.OrdenConserjeriaId)</dd>

                <dt class="col-sm-3">Fecha de Inicio:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaInicio)</dd>

                <dt class="col-sm-3">Fecha de Fin:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaFin)</dd>

                <dt class="col-sm-3">Descripción:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-3">Estado:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>

                <dt class="col-sm-3">Número de Habitación:</dt>
                <dd class="col-sm-9">N°- @Html.DisplayFor(model => model.Habitacion.Numero)</dd>

                <dt class="col-sm-3">Personal Asignado:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Personal.Nombre)</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>

            @if (User.IsInRole("Administrador"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.OrdenConserjeriaId" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Editar
                </a>
            }
            
        </div>
    </div>
</div>
