@model IEnumerable<Prueba21.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="fw-bold text-primary"><i class="fas fa-users"></i> Clientes</h2>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-user-plus"></i> Nuevo Cliente</a>
    </div>

    <div class="table-responsive mt-3">
        <table class="table table-striped table-hover border shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                        <td class="text-center">
                            @if (User.IsInRole("Administrador"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Editar
                                </a>
                            }

                            @if (User.IsInRole("Administrador") || User.IsInRole("Recepcionista"))
                            {
                                <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> Detalles
                                </a>
                            }
                            

                            @if (User.IsInRole("Administrador"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
