@model Prueba21.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4><i class="fas fa-user"></i> Detalles del Cliente</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">
                    <a href="mailto:@Model.Email" class="text-decoration-none">
                        <i class="fas fa-envelope"></i> @Html.DisplayFor(model => model.Email)
                    </a>
                </dd>

                <dt class="col-sm-3 fw-bold">Teléfono</dt>
                <dd class="col-sm-9">
                    <i class="fas fa-phone"></i> @Html.DisplayFor(model => model.Telefono)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.ClienteId" class="btn btn-warning text-white">
                <i class="fas fa-edit"></i> Editar
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
