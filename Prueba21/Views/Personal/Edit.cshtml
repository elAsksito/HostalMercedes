@model Prueba21.Models.Personal

@{
    ViewData["Title"] = "Editar Personal";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-warning text-white">
            <h4><i class="fas fa-user-tie"></i> Editar Personal</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="PersonalId" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del personal" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Ingrese el correo electrónico" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Contrasenia" class="form-label fw-bold"></label>
                    <input asp-for="Contrasenia" type="password" class="form-control" placeholder="Ingrese la contraseña" />
                    <span asp-validation-for="Contrasenia" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rol" class="form-label fw-bold"></label>
                    <select asp-for="Rol" class="form-select">
                        <option value="">Seleccione un rol</option>
                        <option value="Administrador">Administrador</option>
                        <option value="Recepcionista">Recepcionista</option>
                        <option value="Conserje">Conserje</option>
                    </select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a la lista
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
