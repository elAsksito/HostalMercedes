@model IEnumerable<Prueba21.Models.Personal>

@{
    ViewData["Title"] = "Personal";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="text-primary">
        <i class="fas fa-user-tie"></i> Personal
    </h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Nuevo Personal
    </a>
</div>

<table class="table table-striped table-hover table-bordered text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@item.Nombre</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.PersonalId" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@item.PersonalId" class="btn btn-sm btn-info text-white">
                        <i class="fas fa-eye"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.PersonalId" class="btn btn-sm btn-danger">
                        <i class="fas fa-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
